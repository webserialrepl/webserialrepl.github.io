{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true, // 増分ビルドを有効化
    "tsBuildInfoFile": "./.tsbuildinfo", // 増分ビルド情報の保存先
    "strict": true, // 厳格モードは維持
    "noUnusedLocals": false, // 未使用ローカル変数のチェックを無効化
    "noUnusedParameters": false, // 未使用パラメータのチェックを無効化
  },
  "include": [
    "src",
    "src/types/worker.d.ts", // 型定義を追加
    "src/types/global.d.ts" // 型定義を追加
  ]
}
